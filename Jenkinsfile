pipeline {
  agent any
  
  stages {
    stage("build") {
      
      steps {
        echo 'building the application...'
      }
      
    }
    
      stage("test") {
      
        steps {
          echo 'testiing the application...'
        }
      
    }
    
      stage("deploy") {
      
        steps {
          echo 'deploying the application...'
        }
      
    }
    
  }
}
